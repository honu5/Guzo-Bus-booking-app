<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="src/views.css">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <title>Bookings </title>
    <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background-color: rgb(48,146,93); /* green background */
      color: white;
      margin: 0;
      max-width: 100vw;
      font-family: Arial, sans-serif;
    }

    .container {
      flex: 1;
      margin-bottom: 14vh; /* space above footer */
      padding: 2rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .booking-card {
      width: 100%;
      max-width: 900px;
      background: rgba(255, 255, 255, 0.15); /* translucent card */
      padding: 1.5rem;
      border-radius: 15px;
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      color: #fff;
    }

    .booking-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.35);
    }

    .booking-card h3 {
      margin: 0 0 10px;
      font-size: 1.5rem;
    }

    .booking-card p {
      margin: 5px 0;
      font-size: 1rem;
    }

    .station-name {
      font-weight: bold;
      text-decoration: underline;
      cursor: pointer;
      color: #fff;
    }

    .stars {
      color: gold;
      font-size: 1rem;
    }

    /* Footer */
    .footer {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: white;
      font-size: large;
      height: 5.7vh;
      color: rgb(0, 0, 0);
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
    }
  </style>
    
</head>
<body>

        <!-- Navbar -->
    <header>
        <nav class="nav">

            <div  class="first-nav nav-part">
                <div class="three-dash item" ><i class="fa-solid fa-bars"></i></div>
                <div class="title item" ><a style="text-decoration: none; color: black;" href="home"> Guzo</a></div>
            </div>

            <div  style="z-index:1000;" class="nav-part">
                <div class="item"><h1> Bookings</h1></div>
            </div>
              
            <div  class="second-nav nav-part">
                <div class="nav-part">
                        <div style="margin-left: -7%;" class="notification item"><a href="notifications"> <i class="fa-solid fa-bell notification-bar"></i></a></div>
                        <div style="margin-right: -7%;" class="user-container item"><a href="profile"><i class="fa-solid fa-circle-user user"></i></a></div>                   
                        <div class="name-container item"><a href="profile"> <h3 class="user">Honelign <br> Yohannes</h3></a></div>
                </div>
            </div>

        </nav>
    </header>

    <div class="side-bar">
        <div class="side-bar-container">
            <div class="routes sid-option"><a href="home"><p>Home</p></a></div>
             <div class="route sid-option"><a href="routes"><p>Routes</p></a></div>
            <div class="Ask sid-option"><a href="Ask"><p>Ask AI</p></a></div>
            <div class="settings sid-option"><p>Settings</p></div>
            <div class="About sid-option"><a href="about"><p>About</p></a></div>
            <div class="Logout sid-option"><a href="logout"><p>Logout</p></a></div>
        </div>
    </div>

    <div class="container">
            <h2>Your Bookings</h2>

            <% if (bookings.length === 0) { %>
            <p>No bookings yet.</p>
            <% } else { %>
            <% bookings.forEach(booking => { %>
                <div class="booking-card">
                <h3><%= booking.route %></h3>
                <p><strong>Travel Date:</strong> <%= booking.travel_date %></p>
                <p><strong>Seat No:</strong> <%= booking.seat_no %></p>
                <p><strong>Station:</strong> 
                    <span class="station-name">
                    <a href="/busStations" style="color:inherit;">
                        <%= booking.station_name %>
                    </a>
                    </span>
                </p>
                <p><strong>Station Rating:</strong> 
                    <span class="stars">
                    <%= "★".repeat(booking.station_rating) + "☆".repeat(5 - booking.station_rating) %>
                    </span>
                </p>
                </div>
            <% }) %>
            <% } %>

        </div>

    <!--footer-->
     <div style="z-index: 1000;" class="footer">
        <p>
            &copy; Developed By 
            <a style="color:black;" href="https://portfolio-5blt.onrender.com/">Honelign</a>
        </p>
    </div> 
<script src="src/userHome.js"></script>
    
</body>
</html>