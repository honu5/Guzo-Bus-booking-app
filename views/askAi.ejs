<body>
  <div class="container0">
  <div class="container">
    <div style="margin-top: -25vh;" class="navbar">
      <button class="icon-button sdbr" title="Sidebar">
        <i data-lucide="sidebar"></i>
      </button>
      <button class="icon-button srch" title="Search">
        <i data-lucide="search"></i>
      </button>
      <button onclick="window.location.href='/Ask'" class="icon-button nwct" title="New Chat">
        <i data-lucide="message-square-plus"></i>
      </button>
      <button class="icon-button stgs" title="Settings">
        <i data-lucide="settings"></i>
      </button>
    </div>




    <div style="margin-top: 35vh;">
      <div class="title">
        <h1>What can I help with?</h1>
      </div>

      <div class="form">
        <form action="/other" method="post">
          <input 
            class="input1" 
            autocomplete="off" 
            autocorrect="off" 
            type="text"
            name="user_input" 
            placeholder="Ask me anything with in Ethiopia" 
            required
          >
          <button class="btns" type="submit">
            <i data-lucide="arrow-up"></i>
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="container2">
    <div class="nav">

      <div class="icon">
        <div class="btn1">
          <button class="icon-button" title="Sidebar">
            <i data-lucide="sidebar"></i>
          </button>
        </div>
        <div class="para">Side bar</div>
      </div>

      <div class="icon">
        <div class="btn2">
          <button class="icon-button" title="Sidebar">
            <i data-lucide="search"></i>
          </button>
        </div>
        <div class="para">Search</div>
      </div>

      <div class="icon">
        <div class="btn3" onclick="window.location.href='/Ask'">
          <button class="icon-button" title="New Chat">
            <i data-lucide="message-square-plus"></i>
          </button>
        </div>
        <div class="para">New Chat</div>
      </div>

      <div class="icon">
        <div class="btn4">
          <button class="icon-button" title="New Chat">
            <i data-lucide="settings"></i>
          </button>
        </div>
        <div class="para">Settings</div>
      </div>

      <div class="searchChats">
        
      </div>

    </div> <!-- end .nav -->

    

    <div class="settings-list">
                    <ul class="lists">
                        <li><button      id="langToggleBtn"  style="background-color: black; color: white;" class="stngs">Change language</button></li>
                        <li><button style="background-color: black; color: white;" class="stngs">Change Model</button></li>
                        <li><button style="background-color: black; color: white;" class="stngs">Logout</button></li>
                    </ul>
                </div>

    <div class="chat-history">
    <ul class="chats"><span id="chats">Chats</span>
        <% topics.forEach((topic, index) => { %>
<button id="<%= topic.id %>" style="background-color: black; color:white ; border-radius: 7%;">
  <li class="speci" onclick="window.location.href='/chat/<%= topic.id %>'">
    <%= topic.title %>
  </li>
</button>
        <% }) %>
    </ul>



        </div>
         <div class="settings-list">
            <ul class="lists">
                <li class="stngs">Change language</li>
